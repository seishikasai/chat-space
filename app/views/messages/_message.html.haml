.contents__message{"data-message_id": "#{message.id}"}
  .contents__message__user
    .contents__message__user__name
      = message.user.name 
    .contents__message__user__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .contents__message__text
    - if message.content.present?
      %p.contents__message__text__content
        = message.content
    = image_tag message.image.url, class: 'contents__message__text__image' if message.image.present?
     